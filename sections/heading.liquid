<div class="bg-image">
    {% for block in section.blocks %}
    <img class="heading-background" src=" {{ block.settings.image | img_url: 'master' }}" alt="Heading image">
        
    {% endfor %}
</div>

<style>
    .bg-image {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }
    .heading-background {
        overflow: hidden;
        max-width: 100vw;
    }
</style>
{% schema %}
{
    
    "name": "Heading image",
    "tag": "section",
    "max_blocks":1,
    "settings": [
    {
        "type": "image_picker",
        "id": "heading",
        "label": "Heading"
    }
    ],
    "blocks": [
    {
        "name": "Image",
        "type": "image",
        "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Select a Image"
        }
        ]
    }
    ]
}
{% endschema %}
{% stylesheet %}
.bg-image {
    width: 100vw;
    height: auto;
}

{% endstylesheet %}

